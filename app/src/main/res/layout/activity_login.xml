<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorGrey">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_webview"
            android:id="@+id/image_back_login"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登录"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/image_avator_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvUsername"
        android:layout_marginLeft="@dimen/dp_15"/>

    <EditText
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvUsername"
        app:layout_constraintLeft_toRightOf="@id/tvUsername"
        app:layout_constraintBottom_toBottomOf="@id/tvUsername"
        android:id="@+id/edit_username_login"
        android:hint="请输入用户名"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密      码："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        android:id="@+id/tvPassword"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"/>

    <EditText
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvPassword"
        app:layout_constraintLeft_toRightOf="@id/tvPassword"
        app:layout_constraintBottom_toBottomOf="@id/tvPassword"
        android:id="@+id/edit_password_login"
        android:hint="请输入密码"/>

    <TextView
        android:id="@+id/text_userphone_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用手机号登录"
        app:layout_constraintBottom_toTopOf="@id/text_login_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_80"
        android:id="@+id/text_login_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有账号？注册"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintRight_toRightOf="@id/edit_password_login"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/text_register_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        app:layout_constraintLeft_toLeftOf="@id/tvPassword"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/text_forget_login"/>

</android.support.constraint.ConstraintLayout>