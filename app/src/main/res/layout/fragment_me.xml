<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/img_background"
        android:id="@+id/constrain_me"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2">

        <ImageView
            android:src="@drawable/img_default_avator"
            android:scaleType="fitXY"
            android:id="@+id/avater_me"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:id="@+id/text_login_me"
            android:text="登录"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/avater_me"
            app:layout_constraintLeft_toRightOf="@+id/avater_me"/>
        <ImageView
            android:id="@+id/image_chat_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_me"
            app:layout_constraintTop_toTopOf="@+id/text_login_me"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_40"/>
        <ImageView
            android:id="@+id/image_set_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_me"
            app:layout_constraintTop_toTopOf="@id/image_chat_me"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/text_gongju_me"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的工具"
        app:layout_constraintTop_toBottomOf="@id/constrain_me"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/dp_15"/>
    <LinearLayout
        android:id="@+id/linear_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_gongju_me"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/text_taobaodingdan_me"
            android:drawableTop="@drawable/img_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝订单"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/text_pinduoduodingdan_me"
            android:drawableTop="@drawable/img_my_exchangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拼多多订单"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/text_shequn_me"
            android:drawableTop="@drawable/img_my_joincommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的社群"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/text_collect_me"
            android:drawableTop="@drawable/img_my_counpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"/>
        <TextView
            android:id="@+id/text_callme_me"
            android:drawableTop="@drawable/img_my_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系我们"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/images_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/linear_me"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/recycler_me"
        app:layout_constraintTop_toBottomOf="@+id/images_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>