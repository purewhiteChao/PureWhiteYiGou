<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorGrey">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_webview"
            android:id="@+id/image_back_usephone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="登录"/>

    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/edit_phone_userphone"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:layout_marginTop="@dimen/dp_30"/>
    <EditText
        android:id="@+id/edit_yanzhengma_usephone"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/edit_phone_userphone"
        app:layout_constraintLeft_toLeftOf="@id/edit_phone_userphone"
        android:layout_height="wrap_content"
        android:hint="验证码"/>
    <Button
        android:id="@+id/btn_huoqu_usephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        app:layout_constraintRight_toRightOf="@id/edit_yanzhengma_usephone"
        app:layout_constraintBottom_toBottomOf="@id/edit_yanzhengma_usephone"
        app:layout_constraintTop_toTopOf="@id/edit_yanzhengma_usephone"/>
    <Button
        android:id="@+id/btn_login_usephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>