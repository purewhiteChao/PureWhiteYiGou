<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10">

    <ImageView
    android:id="@+id/image_recyclergood_classify"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="@dimen/dp_100"
    android:layout_height="@dimen/dp_100" />
    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/image_recyclergood_classify"
        app:layout_constraintTop_toBottomOf="@id/image_recyclergood_classify"
        android:id="@+id/title_recyclergood_classify"
        android:gravity="center"
        android:textSize="@dimen/dp_15"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"/>
</android.support.constraint.ConstraintLayout>